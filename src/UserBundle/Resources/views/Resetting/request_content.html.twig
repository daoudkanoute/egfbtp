{% trans_default_domain 'FOSUserBundle' %}
<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">

    <div class="form-group mb-lg">
        <label for="username">{{ 'resetting.request.username'|trans }}</label>
        <div class="input-group input-group-icon">
            <input type="text" id="username" name="username" required="required" class="form-control input-lg" />
            <span class="input-group-addon">
                <span class="icon icon-lg">
                    <i class="fa fa-user"></i>
                </span>
            </span>
        </div>
    </div>

    <div class="col-sm-12 text-right">
        <input type="submit" class="btn btn-primary hidden-xs" value="{{ 'resetting.request.submit'|trans }}" />
        <input type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg" value="{{ 'resetting.request.submit'|trans }}" />
    </div>
</form>
